<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:slot_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.udelphi.slotreader.MainActivity">

    <ImageButton
        android:id="@+id/left_FAB"
        android:layout_width="@dimen/FAB_size"
        android:layout_height="@dimen/FAB_size"
        android:layout_alignParentBottom="true"
        android:layout_margin="@dimen/FAB_margin"
        android:background="@drawable/img_btn_selector"
        android:elevation="@dimen/FAB_elevation"
        android:src="@mipmap/btn_remove"
        android:contentDescription="@string/previous" />
    <ImageButton
        android:id="@+id/right_FAB"
        android:layout_width="@dimen/FAB_size"
        android:layout_height="@dimen/FAB_size"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_margin="@dimen/FAB_margin"
        android:background="@drawable/img_btn_selector"
        android:elevation="@dimen/FAB_elevation"
        android:src="@mipmap/btn_add"
        android:contentDescription="@string/next"/>

    <ListView
        android:id="@+id/dictionary_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginLeft="@dimen/board_horizontal_margin"
        android:layout_marginRight="@dimen/board_horizontal_margin"
        android:layout_marginBottom="18dp"
        android:background="@drawable/board_green"
        android:padding="@dimen/board_padding"
        android:gravity="center"
        android:divider="@android:drawable/divider_horizontal_dark"
        android:scrollbars="none"/>
</RelativeLayout>